h2 Screenshots
div(class="screenshots")
  div(class="row")
    - for (var i=1; i<69; i++)
      div(class="col-xs-3 col-md-1")
        if(i < 10)
          a(href="screenshots/screenshot.gear.0" + i + ".png" data-lightbox="screenshots")
            img(src="screenshots/thumbnails/screenshot.gear.0" + i + ".jpg" class="img-thumbnail bottom5")
        else
          a(href="screenshots/screenshot.gear." + i + ".png" data-lightbox="screenshots")
            img(src="screenshots/thumbnails/screenshot.gear." + i + ".jpg" class="img-thumbnail bottom5")
